	<div id="background">
		<header class="cf">
			<div class="wrapper_wide">
			<a href="index.html" id="logo">The Portland Podcast Network</a>
			<nav>
				<ul>
					<% unless podcast_signed_in? %>
						<li><%= link_to "Peruse", podcasts_path %></li>
						<li><%= link_to "Sign In", new_podcast_session_path %></li>
						<li><%= link_to "Sign Up", new_podcast_registration_path %></li>
					<% else %>
						<li><%= link_to "Dashboard", root_path %></li>
						<li><%= link_to "Peruse", podcasts_path %></li>
						<li><%= link_to "Sign Out", destroy_podcast_session_path, method: :delete %></li>
					<% end %>
				</ul>
			</nav>
			</div>
		</header>
		<div class="wrapper_skinny">
			<h1>Peruse local podcasts<br/> or record your own.</h1>
			<%= link_to "Record a Podcast", new_podcast_registration_path, class: "button button_highlight" %>
			<%= link_to "Peruse", podcasts_path, class: "button button_white" %>
		</div>
	</div>